<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        Title="MainWindow" Height="800" Width="450" ResizeMode="NoResize">

    <Grid x:Name="MainGrid" Margin="0,0,0,-6">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="376*"/>
            <ColumnDefinition Width="15*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="209*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="MainFrame" Content="Frame" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="664" VerticalAlignment="Top" Width="450"/>
        <Image Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="140" Margin="260,0,0,0" VerticalAlignment="Top" Width="167" Source="/image.png"/>
        <Button Grid.Column="1" Content="Button" HorizontalAlignment="Left" Height="72" Margin="296,19,0,0" VerticalAlignment="Top" Width="79" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click">
            <Button.Background>
                <ImageBrush ImageSource="/userIcon.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>
    </Grid>
</Window>